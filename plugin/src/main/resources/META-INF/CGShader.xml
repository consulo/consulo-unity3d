<idea-plugin>
	<extensions defaultExtensionNs="com.intellij">
		<completion.contributor language="CG" implementationClass="consulo.cgshader.completion.CGCompletionContributor" />

		<lang.commenter language="CG" implementationClass="consulo.cgshader.CGCommenter" />

		<fileTypeFactory implementation="consulo.cgshader.CGFileTypeFactory" />

		<lang.parserDefinition language="CG" implementationClass="consulo.cgshader.CGParserDefinition" />

		<lang.syntaxHighlighterFactory key="CG" implementationClass="consulo.cgshader.highlighter.CGSingleLazyInstanceSyntaxHighlighterFactory" />

		<lang.braceMatcher language="CG" implementationClass="consulo.cgshader.CGBraceMatcher" />
	</extensions>
</idea-plugin>